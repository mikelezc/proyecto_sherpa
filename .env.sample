# Task Management System Environment Variables
# PLANTILLA - Copy this file to .env and modify as needed

# Django
DEBUG=True
DJANGO_SECRET_KEY=CHANGE_THIS_SECRET_KEY_GENERATE_NEW_ONE

# Base de datos
POSTGRES_DB=task_management_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_SECURE_ONE

# Django Database Configuration
SQL_ENGINE=django.db.backends.postgresql
SQL_HOST=db
SQL_PORT=5432

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# JWT
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY_GENERATE_NEW_ONE
JWT_ALGORITHM=HS256
JWT_EXPIRATION_TIME=3600

# Email (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=tu-email@gmail.com
LOAD_SEED_DATA=true
